# SimulaVoto - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED
# ===========================================

# PostgreSQL/Supabase connection string
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Session encryption secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-secret-key-here-min-32-characters

# ===========================================
# OPTIONAL (for AI features)
# ===========================================

# OpenAI API key for AI predictions and semantic search
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Node environment (development or production)
NODE_ENV=production

# Server port (default: 5000)
PORT=5000
